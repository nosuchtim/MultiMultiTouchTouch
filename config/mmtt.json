#######################################
# Startup configuration file for MMTT #
#######################################

# The format of this file is JSON, with '#' used for comments.

{

  "port": 4444,               # The HTTP port for the browser interface

  "camera": "kinect2",        # Possible values: kinect, kinect2, realsense

  "patch": "fullscreen_kinect2",   # Name a file in the config/mmtt directory

  "flipx": 1,                 # If 1, flip camera image horizontally
  "flipy": 0,                 # If 1, flip camera image horizontally

  "initialalign": 0,          # If initialalign is 1, an auto-alignment
                              # will be done at startup.  This is only
                              # appropriate if you're using a physical frame.

  "tuio.25d.clientlist": "127.0.0.1:3333",
                              # A comma-separated list of destinations
                              # to which TUIO/osc messages are sent.

  "showfps": 1,               # If 1, show FPS in debug messages
  "showregionhits": 1,        # If 1, show region hits
  "showregionrects": 1,       # If 1, show region outlines

  "debugtoconsole": 1,        # If 1, send debug messages to the console
  "debugtolog": 1             # If 1, send debug messages to the log directory

}
